<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/color_background"
    android:orientation="vertical">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>


     <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/li_seletc"
            android:layout_below="@+id/toolbar"
            android:background="@drawable/rent_voucher"
            android:layout_height="wrap_content"
             android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                 android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/li_itemized"
                     android:backgroundTint="#00546E"
                     android:orientation="vertical"
                     android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Itemized"
                         android:layout_gravity="center"
                        android:gravity="center"
                         android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:id="@+id/v_line_itemized"
                        android:background="@color/colorPrimary"
                        android:layout_marginVertical="@dimen/_4sdp"
                        android:layout_height="@dimen/_1sdp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/li_open"
                     android:backgroundTint="#00546E"
                     android:orientation="vertical"
                     android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Open"
                         android:layout_gravity="center"
                        android:gravity="center"
                         android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:visibility="invisible"
                        android:id="@+id/v_line_open"
                        android:background="@color/colorPrimary"
                        android:layout_marginVertical="@dimen/_4sdp"
                        android:layout_height="@dimen/_1sdp"/>


                </LinearLayout>

            </LinearLayout>




        </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/li_seletc"
        android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/main_container">
    </FrameLayout>

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:src="@drawable/check_cart_mark"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"
        android:layout_height="@dimen/_30sdp"
        android:id="@+id/im_cart"
        app:tint="@color/white" />


</RelativeLayout>
