<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/rent_edittext"
         android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Operator "
            android:id="@+id/tttt"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:id="@+id/im_cancel"
            android:padding="@dimen/_2sdp"
            android:tint="@color/light_grey"
            android:src="@drawable/ic_cancel_im"
            android:layout_margin="@dimen/_3sdp"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/_20sdp"/>


        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/im_cancel"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/colorPrimaryMoreLight"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_height="@dimen/_1sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/tttt"
            android:layout_margin="@dimen/_2sdp"
             android:padding="5dp">


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recycler_op"
                 android:layout_marginBottom="@dimen/_5sdp"
                android:layout_height="match_parent"/>



        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>